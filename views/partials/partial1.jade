.container(on-keydown="move", on-keyup="stop", keys="[38, 40, 87, 83]")
    p.row-fluid Player 1: W and S
    p.row-fluid Player 2: I and K
    .row-fluid
        .field
            .middleLine
            .scoreBox
                .score#score1 {{ score[0] }}
                .score#score2 {{ score[1] }}
            .pad#pad1(ng-style="pad1style")
            .pad#pad2(ng-style="pad2style")
            .ball#ball(ng-style="ballstyle")
    .popUp(ng-show="status != 'Running'") {{ message }}