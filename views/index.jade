extends layout

block body
  form.navbar.navbar-fixed-top.navbar-form(ng-controller="DialogCtrl")
    .navbar-inner
      .container-fluid
        a.brand(href='#') Node Pong
        ul.nav
          li
            a(href='game') Game
          li
            a(href='todo') Todo
          li
            -if(!user)
              button.btn.btn-primary(type="button", ng-click="openSignIn()") Sign In
            -else
              a(href="/logout", ng-click="logOut()") Sign Out
          -if(user) {
          li
            a(href='/') 
              =" Welcome " + user.email
          -}
  .container-fluid
    div(ng-controller='AppCtrl')
      div(ng-view)

  script(src="//code.jquery.com/jquery-latest.min.js").
  script(src='//s3.amazonaws.com/node-pong/assets/js/application.js').
