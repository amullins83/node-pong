extends layout

block body
    div#fb-root
    form.navbar.navbar-fixed-top.navbar-form.pull-left(ng-controller="DialogCtrl")
            .navbar-inner
                a.brand(href='#') Node Pong
                ul.nav
                    li
                        a(href='game') Game
                    li
                        a(href='todo') Todo
                    li
                        button.btn.btn-primary.ng-cloak(type="button", ng-click="signInOutButton()", ng-hide="!signInOutText()", ng-bind="signInOutText()")
                    li
                        button.btn.btn-default.fb-login-button(style="margin-left:5px")
                p.navbar-text.ng-cloak(ng-hide="!user", ng-bind="'Welcome, ' + user.userName")
    .container-fluid
        div(ng-controller='AppCtrl')
            div(ng-view)

    script(src='//s3.amazonaws.com/node-pong/assets/js/application.js').
